# ==========================================================
# Archivo de ejemplo de variables de entorno (.env.example)
# Copia este archivo como .env y personaliza los valores antes de levantar el entorno.
# NO subas tu archivo .env real al repositorio por seguridad.
# ==========================================================

# ==============================
# Parámetros de WordPress (Desarrollo local)
# ==============================

WORDPRESS_URL=http://localhost:8000
# URL base donde se servirá WordPress.

WORDPRESS_TITLE=Mi sitio WordPress
# Título del sitio WordPress.

WORDPRESS_ADMIN_USER=admin
# Usuario administrador para WordPress.

WORDPRESS_ADMIN_PASSWORD=TuPasswordSegura123!
# Contraseña del administrador.

WORDPRESS_ADMIN_EMAIL=admin@ejemplo.com
# Correo electrónico del administrador.

WORDPRESS_DB_NAME=wordpress_db
# Nombre de la base de datos de WordPress.

WORDPRESS_DB_USER=wp_user
# Usuario de la base de datos de WordPress.

WORDPRESS_DB_PASSWORD=WpPasswordSegura!
# Contraseña del usuario de la base de datos de WordPress.

WORDPRESS_PORT=8000
# Puerto local donde se expondrá WordPress.

ACTIVATE_PLUGINS=
# Plugins a activar automáticamente tras la instalación (separados por coma, opcional).

# ==============================
# Parámetros de MySQL (Desarrollo local)
# ==============================

MYSQL_ROOT_PASSWORD=RootPasswordSegura!
# Contraseña root de MySQL.

MYSQL_DATABASE=wordpress_db
# Nombre de la base de datos en MySQL.

MYSQL_USER=wp_user
# Usuario que se creará en MySQL.

MYSQL_PASSWORD=WpPasswordSegura!
# Contraseña del usuario MySQL.

# ==============================
# Configuración general
# ==============================

DISABLE_XMLRPC=true
# Deshabilita XML-RPC para mejorar la seguridad (true/false).

TZ=Europe/Madrid
# Zona horaria del contenedor.

WP_DEBUG=true
# Activa el modo debug para desarrollo (true/false).

# ==============================
# Configuración de temas (opcional)
# ==============================

THEME_TO_ACTIVATE=Divi
# Tema personalizado que se activará tras la instalación.

AUTO_ACTIVATE_THEME=true
# Activa el tema automáticamente tras la instalación (true/false).

DEFAULT_THEME_FALLBACK=true
# Usa el tema por defecto si falla la activación (true/false).
