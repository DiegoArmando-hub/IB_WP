# ==========================================================
# Archivo de ejemplo de variables de entorno (.env.example)
# Copia este archivo como .env y personaliza los valores antes de levantar el entorno.
# OJO No subas tu archivo .env real al repositorio por seguridad.
# ==========================================================

# ==============================
# Parámetros de WordPress
# ==============================

WORDPRESS_URL=http://localhost:8000        # URL base donde se servirá WordPress
WORDPRESS_TITLE=Mi Sitio Seguro            # Título del sitio WordPress
WORDPRESS_ADMIN_USER=admin                 # Usuario administrador de WordPress
WORDPRESS_ADMIN_PASSWORD=SuperPasswordSegura123!   # Contraseña del administrador
WORDPRESS_ADMIN_EMAIL=admin@ejemplo.com    # Correo electrónico del administrador
WORDPRESS_DB_NAME=wordpress                # Nombre de la base de datos de WordPress
WORDPRESS_DB_USER=wp_user                  # Usuario de la base de datos de WordPress
WORDPRESS_DB_PASSWORD=WpPassSegura2025!    # Contraseña del usuario de la base de datos de WordPress
WORDPRESS_PORT=8000                        # Puerto local donde se expondrá WordPress
ACTIVATE_PLUGINS=wordfence                 # Plugins a activar automáticamente tras la instalación
THEME_TO_ACTIVATE=divi-child               # Tema personalizado a activar tras la instalación

# ==============================
# Parámetros de MySQL
# ==============================

MYSQL_ROOT_PASSWORD=RootPassSegura2025!    # Contraseña del usuario root de MySQL
MYSQL_DATABASE=wordpress                   # Nombre de la base de datos
MYSQL_USER=wp_user                         # Usuario de la base de datos
MYSQL_PASSWORD=WpPassSegura2025!           # Contraseña del usuario de la base de datos

# ==============================
# Configuración general
# ==============================

DISABLE_XMLRPC=true                        # Deshabilita XML-RPC para mayor seguridad (true/false)
TZ=Europe/Madrid                           # Zona horaria del servidor PHP y MySQL
WP_DEBUG=false                             # Habilita o deshabilita el modo debug de WordPress (true/false)
