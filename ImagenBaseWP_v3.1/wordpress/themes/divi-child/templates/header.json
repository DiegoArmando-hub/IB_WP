{
  "layout": {
    "type": "section",
    "settings": {
      "background_color": "#ffffff",
      "padding": {
        "top": "20px",
        "bottom": "20px"
      }
    },
    "content": [
      {
        "type": "row",
        "content": [
          {
            "type": "column",
            "width": "30%",
            "content": [
              {
                "type": "image",
                "settings": {
                  "image_url": "[divi_child_logo]",
                  "image_alt": "Logo de la empresa",
                  "alignment": "left",
                  "width": "180px"
                }
              }
            ]
          },
          {
            "type": "column",
            "width": "70%",
            "content": [
              {
                "type": "menu",
                "settings": {
                  "menu_id": "primary-menu",
                  "alignment": "right",
                  "dropdown_direction": "down",
                  "font_size": "16px",
                  "text_color": "#333333",
                  "hover_text_color": "#3a86ff"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}